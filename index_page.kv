
<IndexPage>:
    canvas.before:
        Color:
            rgb: hex(bleu)
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "vertical"
    BoxLayout:
        size_hint: 1, 0.1
        Label:
            canvas.before:
                Color:
                    rgba:  0, 0, 0, 0.75
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "Welcome to you..."
            font_size: extra
            font_name: acme
        Button:
            canvas.before:
                Color:
                    rgba:  0, 0, 0, 0.75
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "Logout"
            size_hint: 0.1, 1
            pos_hint: {"top": 1}
            background_normal: "images/button_background.png"
            on_press: app.manage.transition.direction:"right";app.manage.logout_user()
    FloatLayout:
        Image:
            source: "images/linda.png"
            size_hint: 0.5, 1
        Label:
            text: "I'm doctor Linda Martins and I'm happy to see you."
            font_name: acme
            font_size: medium
            pos_hint: {"center_x":0.48, "center_y":0.75}
            text_size: self.size
            size_hint: None, None
            size: dp(265), dp(70)
            valign: "middle"
            halign: "center"
        BoxLayout:
            canvas.before:
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: radius_, radius_
            orientation:"vertical"
            size_hint: 0.35, 0.6
            pos_hint: {"right": 0.99, "center_y": 0.47}
            padding: dp(15), dp(25)
            spacing: dp(30)
            Button:
                text:"Modify information's"
                font_size: medium
                font_name: amble_italic
                background_normal: "images/button_background.png"
                on_press: app.manage.current = "update"
            Button:
                text:"Consult my BMI"
                font_size: medium
                font_name: amble_italic
                background_normal: "images/button_background.png"
                on_press: app.manage.current = "conultation"
            Button:
                text:"My state of health"
                font_size: medium
                font_name: amble_italic
                background_normal: "images/button_background.png"
                on_press: app.manage.current = "state"
